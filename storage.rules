rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Artist flash design images â€” artists/{artistId}/flash/
    match /artists/{artistId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == artistId;
    }
    // Artist avatars
    match /avatars/{artistId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == artistId;
    }
  }
}
