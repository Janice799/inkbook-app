rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Artists — authenticated user can read/write own profile
    match /artists/{artistId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == artistId;
    }

    // Bookings — artist can read/manage, anyone can create
    // Public read/update needed for consent form flow
    match /bookings/{bookingId} {
      allow create: if true;
      allow read: if true;
      allow update: if true;
      allow delete: if false;
    }

    // Flash Designs — public read, artist write
    match /flash_designs/{designId} {
      allow read: if true;
      allow write: if request.auth != null && resource.data.artistId == request.auth.uid;
      allow create: if request.auth != null;
    }

    // Team Members — owner can CRUD
    match /team_members/{memberId} {
      allow read: if request.auth != null && resource.data.ownerId == request.auth.uid;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // Consent Forms — anyone can create (client), artist can read
    match /consent_forms/{formId} {
      allow create: if true;
      allow read: if true;
      allow update: if true;
    }
  }
}
