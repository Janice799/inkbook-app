rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Artists — authenticated user can read/write own profile
    match /artists/{artistId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == artistId;
    }

    // Bookings — artist can read/manage, anyone can create
    match /bookings/{bookingId} {
      allow create: if true;
      allow read: if request.auth != null && resource.data.artistId == request.auth.uid;
      allow update: if request.auth != null && resource.data.artistId == request.auth.uid;
      allow delete: if false;
    }

    // Flash Designs — public read, artist write
    match /flash_designs/{designId} {
      allow read: if true;
      allow write: if request.auth != null && resource.data.artistId == request.auth.uid;
      allow create: if request.auth != null;
    }
  }
}
